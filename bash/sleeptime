#!/bin/bash
if [[ ${1:2:1} != : ]]  
then echo "You idiot!";
echo "cli format: " $0 " hh:mm"
exit 0;
fi
a=${1:0:1}
b=${1:1:1}
c=${1:3:1}
d=${1:4:1}
tmp=0
hrs=0;
mnt=0;
res=0;
echo "#########################################################################"
echo "#########################################################################"
echo "######---------##### | ### | \#######/| ## |---------####################"
echo "######### | ######## | ### | #\#####/ | ## | ############################"
echo "######### | ######## | ### | ##\###/# | ## | ############################"
echo "######### | ######## | ### | ###\#/## | ## |---------####################"
echo "######### | ######## | ### | ######## | ## | ############################"
echo "######### | ######## | ### | ######## | ## | ############################"
echo "######### | ######## | ### | ######## | ## |---------####################"
echo "#########################################################################"
echo "#########################################################################"
echo 
echo "Better time to wake up:"
echo 

	if [ ${1:2:1} = ":" ] 
then hrs=$((($a*10)+b)); #count hours
mnt=$((($c*10)+d)); #count minutes 
res=$(((hrs)*60 + mnt)) #count time in minetes

	for tmp in 1 2 3 4 5 6 #add 1h 30m to time six times
 do
res=$(($res+90)) #add 90 minetes
 
	if [ $res -ge 1440 ] #if time after 00:00
then res=$(($res-1440))
fi

a=$(($res / 60));
b=$(($res % 60))
echo "----------"
echo $a  ' h :' $b " m"
echo "----------"
	done
fi
